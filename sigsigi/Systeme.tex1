function []= VanDerPolS(); 
    hold off; n=4;
    for i=-n:n,
        for j=-n:n,
            x0=[i;j];
            [t,x]=ode45('VanDerPolD',[0 10],x0); 
            subplot(1,2,1);plot(x(:,1),x(:,2));title('Phasenebene');
            grid on; hold on; 
            xlabel('\rightarrow x_1');ylabel('\rightarrow x_2');
            if (j==1) & (i==1)
              subplot(1,2,2);plot([x(:,1) x(:,2)]);grid on;
              xlabel('\rightarrow t');ylabel('\rightarrow x_1; x_2 ')
            end    
        end
    end

function xDot = VanDerPolD(t,x)
  mu=2; 
  xDot=[x(2); mu*(1-x(1)*x(1))*x(2)-x(1)]; 
